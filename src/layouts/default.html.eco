<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width">

  <!-- Site Properities -->
  <title><%= @getPreparedTitle() %></title>
  <meta property="og:title" content="<%= @getPreparedTitle() %>" />
  <meta property="og:description" content="<%= @getPreparedDescription() %>" />
  <meta name="description" content="<%= @getPreparedDescription() %>" />
  <meta name="keywords" content="<%= @getPreparedKeywords() %>" />
  <%- @getBlock('meta').toHTML() %>
  <%- @partial('favicon') %>
  <%- @getBlock('styles').add(@site.styles).toHTML() %> 
  <style>
    body{
      margin:0 10%;
      background-color: cyan;
      font-size:25px;
      font-family:"comic sans ms", Verdana, Geneva, sans-serif;
    }
    nav{
      position:absolute;
      top:0;
      right:0;
    }
    aside{
      font-size:18px;
      clear:both;
    }
    .nav{
      float:right;
    }
    .search-bar{
      width:150px;
    }
  </style>
</head>
<body>
  <header>
    <h1><%= @document.title || @site.title %> </h1>
  </header>
  <nav><% if @document.url != "/search/": %> <%- @getLunrSearchBlock('search/') %> <% end %></nav>
  <article>
    <%- @content %>
  </article>
  <aside>
  <hr />
  <span class="share">
    Share this page on: 
    <a target="_blank" href="http://www.facebook.com/sharer/sharer.php?u=<%- @site.url %><%- @document.url %>">fb</a> 
    <a target="_blank" href="https://twitter.com/intent/tweet?url=<%- @site.url %><%- @document.url %>">twitter</a>
    <a target="_blank" href="https://plus.google.com/share?url=<%- @site.url %><%- @document.url %>">g+</a>
  </span>
  <span class="nav">
    <a href="/">Learn Learnin'</a>
  </span>
  </aside>
  <%- @getBlock('scripts').add(@site.scripts).toHTML() %>
</body>
</html>
