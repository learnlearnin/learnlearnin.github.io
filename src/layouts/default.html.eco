<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width">

  <!-- Site Properities -->
  <title><%= @getPreparedTitle() %></title>
  <meta property="og:title" content="<%= @getPreparedTitle() %>" />
  <meta property="og:description" name="description" content="<%= @getPreparedDescription() %>" />
  <% if @document.img: %><meta property="og:image" content="/images/<%- @document.img %>" /><% end %>
  <meta property="og:url" content="<%= @getAbsoluteUrl() %>" />
  <meta name="keywords" content="<%= @getPreparedKeywords() %>" />
  <%- @getBlock('meta').toHTML() %>
  <script><%-  @partial('fontload-min') %></script>
  <script>loadFont('Lin Biolinum', '/fonts.woff.css')</script>
  <%- @partial('favicon') %>
  <%- @getBlock('styles').add(@site.styles).toHTML() %>

  <link href="/feed.atom" type="application/atom+xml" rel="alternate" title="Sitewide ATOM Feed" />


</head>
<body>
  <div id="content-wrapper">
  <nav>
    <a href="/" title="Go home"><img src="/LofL60.png" alt="~" title="~"></a>
    
  </nav>
  <header>
    <a href=""><h1><%= @document.title || @site.title %> </h1></a>
  </header>
  <!-- <button id="toggletoc">Table of Contents</button>
  <div id="toc"></div> --> <!-- Disabling Table of Contents till it can be made look better -->
  <article>
    <% if @document.img: %>
      <img class="articleimg" src="/images/<%- @document.img %>">
      <div class="imgattr">
        <%- @document.imgattr %>
      </div>
    <% end %>
    <%- @content %>
  </article>
  <div class="share">
    <span id="shareButton"><a href="">Share this »</a></span><span id="shareTools">
    <a target="_blank" href="http://sharetodiaspora.github.io/?title=<%= @getPreparedTitle() %>&url=<%= @getAbsoluteUrl() %>">diaspora*</a> |
    <a target="_blank" href="http://www.facebook.com/sharer/sharer.php?u=<%= @getAbsoluteUrl() %>">Facebook</a> |
    <a target="_blank" href="https://twitter.com/intent/tweet?url=<%= @getAbsoluteUrl() %>">Twitter</a> |
    <a target="_blank" href="https://plus.google.com/share?url=<%= @getAbsoluteUrl() %>">Google+</a> |
    <a target="_blank" href="mailto:?subject=<%= @getPreparedTitle() %>&body=Check this out: <%= @getAbsoluteUrl() %>">Email</a>
    <span class="mobileshare">
    | <a href="tg://msg?text=<%= @getPreparedTitle() %> - <%= @getAbsoluteUrl() %>"> Telegram</a>  
    | <a href="whatsapp://send?text=<%= @getPreparedTitle() %> - <%= @getAbsoluteUrl() %>">Whatsapp</a>
    </span>
  </span>
  </div>
  <aside>
  <hr />
  <span class="comment no-wrap">
    <a href="/about/#contact">Comment</a> 
  </span> | 
  <a href="/about/">About</a> |
  <span class="no-wrap">
    <a href="/"> Home</a>
  </span> |
  <a id="install" href="#" class="no-wrap"> FxOS app</a>
  | <span class="no-wrap"> Subscribe: <a href="mailto:akshay@learnlearn.in?subject=subscribe">Email</a></span> - 
  <span class="no-wrap"><a href="https://telegram.me/akshay">Telegram</a></span>
   - <span class="no-wrap"><a href="/feed.atom"> Feed</a></span> 
  <br>
  Site tools: 
      <a id="changefont" title="Change font" href="/about/#site-info">✍Change Font</a> |
      <a href="" id="clearstorage"> Clear settings</a> |
      Search: <% if @document.url != "/search/": %> <%- @getLunrSearchBlock('search/') %> <% end %>
    </span>
  </aside>
  </div>
  <%- @getBlock('scripts').add(@site.scripts).toHTML() %>
</body>
</html>
